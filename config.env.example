# WealthForge API Environment Configuration

# Environment
ENVIRONMENT=development

# API Keys - Replace with your actual keys
POLYGON_API_KEY=YOUR_POLYGON_API_KEY_HERE
FRED_API_KEY=YOUR_FRED_API_KEY_HERE

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS=goal_parsing_events,strategy_optimization_events,portfolio_synthesis_events,compliance_audit_events,fine_tuning_events,market_data_requests,economic_data_requests,complete_analysis_events

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (if needed for future expansion)
DATABASE_URL=postgresql://user:password@localhost/wealthforge

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# External API Rate Limits
POLYGON_RATE_LIMIT=5
FRED_RATE_LIMIT=120

# Cache TTL (seconds)
CACHE_TTL_MARKET_DATA=300
CACHE_TTL_ECONOMIC_DATA=3600
CACHE_TTL_ANALYSIS=1800

# Performance Settings
MAX_AGENTS=100
DEFAULT_AGENTS=50
MAX_CONCURRENT_REQUESTS=10