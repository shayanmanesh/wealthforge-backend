{
  "version": 2,
  "name": "wealthforge-frontend",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "REACT_APP_API_URL": "@react_app_api_url"
  },
  "github": {
    "enabled": true,
    "autoDeployment": true
  },
  "functions": {
    "app/api/*.js": {
      "maxDuration": 30
    }
  }
}